@{
    ViewData["Title"] = "Skapa ny kund";

}

@model Models.AccountModels.RegisterAccountModel

<h1>Registrera dig</h1>

<form asp-controller="Account" asp-action="CreateAccount1" method="POST">
    <div class="card">
        <div class="card-header">
        </div>
        <div class="card-body p-3">
            <div class="mb-3">
                <label class="form-label" asp-for="FirstName"></label>
                <input class="form-control" asp-for="FirstName">
            </div>
            <div class="mb-3">
                <label class="form-label" asp-for="LastName"></label>
                <input class="form-control" asp-for="LastName">
            </div>
	        <div class="mb-3">
		        <label class="form-label" asp-for="EmailAddress"></label>
		        <input class="form-control" asp-for="EmailAddress">
	        </div>
	        <div class="mb-3">
		        <label class="form-label" asp-for="Password"></label>
		        <input class="form-control" asp-for="Password">
	        </div>
            <div class="mb-3">
                <label class="form-label" asp-for="PhoneNumber"></label>
                <input class="form-control" asp-for="PhoneNumber">
            </div>
            <div class="mb-3">
                <label class="form-label" asp-for="City"></label>
                <input class="form-control" asp-for="City">
            </div>
            <div class="mb-3">
                <label class="form-label" asp-for="StreetAddress"></label>
                <input class="form-control" asp-for="StreetAddress">
            </div>

            <button id="save" type="submit" class="btn btn-primary">Skapa konto</button>
        </div>
    </div>
</form>