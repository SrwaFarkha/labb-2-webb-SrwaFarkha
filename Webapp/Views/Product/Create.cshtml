@{
    ViewData["Title"] = "Lägg till nya produkter";
}

@using Microsoft.AspNetCore.Mvc.TagHelpers
@model Models.ProductModels.CreateNewProductModel

<h1>Här lägger vi till nya produkter</h1>

@Html.ValidationSummary()

<form asp-controller="Product" asp-action="Create" method="POST">
    <div class="card">
        <div class="card-header">
        </div>
        <div class="card-body p-3">
            <div class="mb-3">
                <label class="form-label" asp-for="ProductName"></label>
                <input class="form-control" asp-for="ProductName">
                <span asp-validation-for="ProductName"></span>
            </div>
            <div class="mb-3">
                <label class="form-label" asp-for="ProductDescription"></label>
                <input class="form-control" asp-for="ProductDescription">
                <span asp-validation-for="ProductDescription"></span>
            </div>
            <div class="mb-3">
                <label class="form-label" asp-for="Price"></label>
                <input class="form-control" asp-for="Price">
                <span asp-validation-for="Price"></span>
            </div>
            <div class="mb-3">
                <label class="form-label" asp-for="Category"></label>
                @Html.DropDownList("SelectedCategoryId", ViewBag.CategoryList as SelectList, new { @class = "form-control" })
            </div>
            
            <button id="save" type="submit" class="btn btn-primary">Lägg till produkt</button>
        </div>
    </div>
</form>