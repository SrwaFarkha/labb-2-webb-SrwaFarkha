
@model Models.ProductModels.ProductUpdateModel

@Html.ValidationSummary()
<form asp-controller="Product" asp-action="Edit" method="POST">
    <div class="card">
        <div class="card-header">
            <h4>Edit product</h4>
        </div>
        <div class="card-body p-3">
            @Html.HiddenFor(m=>Model.ProductId)
            <div class="mb-3">
                <label class="form-label" asp-for="ProductName"></label>
                <input class="form-control" asp-for="ProductName">
                <span asp-validation-for="ProductName"></span>
            </div>
            <div class="mb-3">
                <label class="form-label" asp-for="ProductDescription"></label>
                <input class="form-control" asp-for="ProductDescription">
                <span asp-validation-for="ProductDescription"></span>
            </div>
            <div class="mb-3">
	            <label class="form-label" asp-for="Price"></label>
	            <input class="form-control" asp-for="Price">
	            <span asp-validation-for="Price"></span>
            </div>
            <div class="mb-3">
	            <label class="form-label" asp-for="Discontinued"></label>
                <input type="checkbox" asp-for="Discontinued" checked="@Model.Discontinued" value="True"/>

            </div>
            <button id="save" type="submit" class="btn btn-primary">Save</button>
        </div>
    </div>
</form>